{
  "expo": {
    "name": "tektal-mobile",
    "slug": "tektal-mobile",
    "scheme": "tektal",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.antaseck27.tektalmobile",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSCameraUsageDescription": "Tektal utilise la caméra pour enregistrer les chemins.",
        "NSMicrophoneUsageDescription": "Tektal utilise le microphone pour enregistrer les vidéos.",
        "NSLocationWhenInUseUsageDescription": "Tektal utilise votre position pour enregistrer le trajet GPS.",
        "NSLocationAlwaysUsageDescription": "Tektal utilise votre position pour enregistrer le trajet GPS.",
        "NSPhotoLibraryUsageDescription": "Tektal accède à la galerie pour sélectionner des vidéos."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.antaseck27.tektalmobile",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.READ_MEDIA_IMAGES"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "tektal"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "1a1e235e-bb89-4a93-9704-37445ffb8a53"
      }
    },
    "plugins": [
      "expo-video",
      "expo-asset",
      [
        "expo-camera",
        {
          "cameraPermission": "Tektal utilise la caméra pour enregistrer les chemins.",
          "microphonePermission": "Tektal utilise le microphone pour enregistrer les vidéos.",
          "recordAudioAndroid": true
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Tektal utilise votre position pour enregistrer le trajet GPS."
        }
      ],
      "expo-secure-store"
    ]
  }
}